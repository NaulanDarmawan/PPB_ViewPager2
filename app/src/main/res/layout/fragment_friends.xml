            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dua" />

        <!-- Text and Image 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ini Adalah Bagian Friends"
